{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"es2015",
			"es2017"
		],
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules/@types/babel__traverse"
	]
}
